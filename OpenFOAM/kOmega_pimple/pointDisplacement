FoamFile
{
    version 2.0;
    format ascii;
    class pointVectorField;
    object pointDisplacement;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
	
	outlet
	{
		type			fixedValue;
		value			uniform (0 0 0);
	}
    
	"riblet.*"
    {
        type		fishMotion;
        amplitude	(0.02 -0.08 0.16);
        axis        (0 1 0);
        origin      (0 0 0);
		omega   	6.28;
		length		1.0;
		waveNumber	(0 1 0);
		value		uniform (0 0 0);
    }
	
	topAndBottom
	{
		type		fixedValue;
		value		uniform (0 0 0);
	}
	
	front
	{
		type		empty;
	}
	
	back
	{
		type 		empty;
	}
}


